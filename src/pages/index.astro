		.step {
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 0.5rem;
			flex: 0 0 auto;
		}

		.step-circle {
			width: 36px;
			height: 36px;
			border-radius: 50%;
			background: rgba(255, 255, 255, 0.8);
			color: var(--color-primary);
			display: flex;
			align-items: center;
			justify-content: center;
			font-weight: 600;
			font-size: 0.9rem;
			transition: all 0.3s ease;
			border: 2px solid transparent;
			box-shadow: 0 2px 8px rgba(0,0,0,0.05);
