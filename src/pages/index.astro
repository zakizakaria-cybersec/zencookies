			{ id: 11, name: "Chocolate Marshmallow", price: 7.00, image: "https://wsrv.nl/?url=https://asset.jeki.uk/Zencookies/Chocolate%20Marshmallow.PNG&w=500&output=webp" },
			{ id: 12, name: "Chocolate Cream Cheese", price: 7.00, image: "https://wsrv.nl/?url=https://asset.jeki.uk/Zencookies/Chocolate%20Creamcheese.PNG&w=500&output=webp" },
			{ id: 13, name: "Biscoff Cheesekut", price: 14.00, image: "https://wsrv.nl/?url=https://asset.jeki.uk/Zencookies/Biscoff%20Cheesekut.PNG&w=500&output=webp" },
			{ id: 14, name: "Biscoff White Chocolate", price: 8.00, image: "https://wsrv.nl/?url=https://asset.jeki.uk/Zencookies/Biscoff%20White%20Chocolate.PNG&w=500&output=webp" },
			{ id: 15, name: "Oreo Cheesekut", price: 14.00, image: "https://wsrv.nl/?url=https://asset.jeki.uk/Zencookies/Oreo%20Cheesekut.PNG&w=500&output=webp" }
		];

		// Variation Selection
		function handleVariationChange(selectElement) {
			const selectedOption = selectElement.options[selectElement.selectedIndex];
			const categoryId = selectElement.dataset.category;
			const id = selectedOption.value;
			const name = selectedOption.dataset.name;
			const price = parseFloat(selectedOption.dataset.price);
			const desc = selectedOption.dataset.desc;
			const image = selectedOption.dataset.image;

			// Update UI
			const imgEl = document.getElementById(`img-${categoryId}`);
			const descEl = document.getElementById(`desc-${categoryId}`);
			const priceEl = document.getElementById(`price-${categoryId}`);
			
			if (imgEl) imgEl.src = image;
			if (descEl) descEl.textContent = desc;
			if (priceEl) priceEl.textContent = `RM ${price.toFixed(2)}`;
			
			// Update Add to Cart button
			const addBtn = document.getElementById(`add-btn-${categoryId}`);
			if (addBtn) {
				addBtn.dataset.cookieId = id;
				addBtn.dataset.cookieName = name;
				addBtn.dataset.cookiePrice = price;
				addBtn.dataset.cookieImage = image;
				
				// Reset quantity and text when variation changes
				const input = document.getElementById(`qty-${categoryId}`);
				if (input) {
					input.value = 0;
					updateCapsuleText(categoryId);
				}
			}
		}

		// Event Delegation for dynamic elements
		document.addEventListener('change', (e) => {
			if (e.target.classList.contains('variation-select')) {
				handleVariationChange(e.target);
			}
		});

		// Shopping cart state
		let cart = [];

		// DOM Elements
		const cartButton = document.getElementById('cartButton');
		const cartSidebar = document.getElementById('cartSidebar');
		const cartOverlay = document.getElementById('cartOverlay');
		const closeCartBtn = document.getElementById('closeCartBtn');
		const cartCount = document.getElementById('cartCount');
		const cartItems = document.getElementById('cartItems');
		const emptyCart = document.getElementById('emptyCart');
		const cartFooter = document.getElementById('cartFooter');
		const totalAmount = document.getElementById('totalAmount');
		const checkoutBtn = document.getElementById('checkoutBtn');
		const orderModal = document.getElementById('orderModal');
		const closeModalBtn = document.getElementById('closeModalBtn');
		const backToCartBtn = document.getElementById('backToCartBtn');
		const sendWhatsAppBtn = document.getElementById('sendWhatsAppBtn');
		const orderSummaryContent = document.getElementById('orderSummaryContent');
		const paymentModal = document.getElementById('paymentModal');
		const closePaymentModalBtn = document.getElementById('closePaymentModalBtn');
		const sendPaymentProofBtn = document.getElementById('sendPaymentProofBtn');
		const paymentAmount = document.getElementById('paymentAmount');

		// Utility Functions
		function updateCartCount() {
			const totalItems = cart.reduce((sum, item) => sum + item.quantity, 0);
			cartCount.textContent = totalItems;
			if (totalItems > 0) {
				cartCount.classList.remove('hidden');
			} else {
				cartCount.classList.add('hidden');
			}
		}

		function calculateTotal() {
			return cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
		}

		function formatPrice(price) {
			return `RM ${price.toFixed(2)}`;
		}

		function renderCart() {
			if (cart.length === 0) {
				emptyCart.style.display = 'block';
				cartItems.innerHTML = '';
				cartFooter.style.display = 'none';
			} else {
				emptyCart.style.display = 'none';
				cartFooter.style.display = 'block';
				
				cartItems.innerHTML = cart.map(item => `
					<div class="cart-item" data-item-id="${item.id}">
						<div class="cart-item-icon">üç™</div>
						<div class="cart-item-details">
							<div class="cart-item-name">${item.name}</div>
							<div class="cart-item-price">${formatPrice(item.price)} each</div>
							<div class="cart-item-quantity">Quantity: ${item.quantity}</div>
						</div>
						<div class="cart-item-actions">
							<div class="cart-item-total">${formatPrice(item.price * item.quantity)}</div>
							<button class="remove-item-btn" onclick="removeFromCart(${item.id})">Remove</button>
						</div>
					</div>
				`).join('');
				
				totalAmount.textContent = formatPrice(calculateTotal());
			}
			updateCartCount();
		}

		function openCart() {
			cartSidebar.classList.add('open');
			cartOverlay.classList.add('active');
			document.body.style.overflow = 'hidden';
		}

		function closeCart() {
			cartSidebar.classList.remove('open');
			cartOverlay.classList.remove('active');
			document.body.style.overflow = '';
		}

		// Cart Functions
		window.removeFromCart = function(cookieId) {
			cart = cart.filter(item => item.id !== cookieId);
			renderCart();
			
			// Reset quantity input
			const qtyInput = document.querySelector(`.qty-input[data-cookie-id="${cookieId}"]`);
			if (qtyInput) qtyInput.value = '0';
		};

		function addToCart(cookieId, quantity) {
			if (quantity <= 0) return;

			const cookie = cookiesData.find(c => c.id === cookieId);
			if (!cookie) return;

			const existingItem = cart.find(item => item.id === cookieId);
			
			if (existingItem) {
				existingItem.quantity = quantity;
			} else {
				cart.push({
					id: cookie.id,
					name: cookie.name,
					price: cookie.price,
					image: cookie.image,
					quantity: quantity
				});
			}

			renderCart();
			openCart();

			// Visual feedback
			const btn = document.querySelector(`.capsule-add-btn[data-cookie-id="${cookieId}"]`);
			if (btn) {
				const originalText = btn.querySelector('span').textContent;
				btn.querySelector('span').textContent = "Added!";
				setTimeout(() => {
					// The text will be reset by the updateCapsuleText call in the click handler
					// But just in case:
					// btn.querySelector('span').textContent = originalText; 
				}, 1000);
			}
		}

		// Quantity Controls
		document.addEventListener('click', (e) => {
			// Handle Minus
			if (e.target.closest('.qty-minus')) {
				const btn = e.target.closest('.qty-minus');
				const categoryId = btn.dataset.category;
				const input = document.getElementById(`qty-${categoryId}`);
				if (input) {
					const currentValue = parseInt(input.value) || 0;
					if (currentValue > 0) {
						input.value = currentValue - 1;
						updateCapsuleText(categoryId);
					}
				}
			}

			// Handle Plus
			if (e.target.closest('.qty-plus')) {
				const btn = e.target.closest('.qty-plus');
				const categoryId = btn.dataset.category;
				const input = document.getElementById(`qty-${categoryId}`);
				if (input) {
					const currentValue = parseInt(input.value) || 0;
					if (currentValue < 99) {
						input.value = currentValue + 1;
						updateCapsuleText(categoryId);
					}
				}
			}

			// Handle Add Button Click
			if (e.target.closest('.capsule-add-btn')) {
				const btn = e.target.closest('.capsule-add-btn');
				const cookieId = parseInt(btn.dataset.cookieId);
				const categoryId = btn.dataset.category;
				const input = document.getElementById(`qty-${categoryId}`);
				let quantity = parseInt(input.value) || 0;
				
				// If quantity is 0, treat as "Add 1"
				if (quantity === 0) {
					quantity = 1;
					input.value = 1;
					updateCapsuleText(categoryId);
				}
				
				addToCart(cookieId, quantity);
				
				// Reset after adding? Optional. Let's keep it for now or reset to 0.
				// For better UX, maybe reset to 0 to show "Add to Cart" again?
				// Or keep it to allow adding more? Let's reset to 0 for "fresh" state.
				setTimeout(() => {
					input.value = 0;
					updateCapsuleText(categoryId);
				}, 1000);
			}
		});

		function updateCapsuleText(categoryId) {
			const input = document.getElementById(`qty-${categoryId}`);
			const btnText = document.getElementById(`btn-text-${categoryId}`);
			const addBtn = document.getElementById(`add-btn-${categoryId}`);
			const quantity = parseInt(input.value) || 0;
			const price = parseFloat(addBtn.dataset.cookiePrice) || 0;

			if (quantity === 0) {
				btnText.textContent = "Add to Cart";
				addBtn.style.color = "var(--color-dark)";
			} else {
				const total = (quantity * price).toFixed(2);
				btnText.textContent = `Add ${quantity} ‚Ä¢ RM ${total}`;
				addBtn.style.color = "var(--color-primary-dark)";
			}
		}

		// Cart UI Controls
		cartButton.addEventListener('click', openCart);
		closeCartBtn.addEventListener('click', closeCart);
		cartOverlay.addEventListener('click', closeCart);

		// Checkout Flow
		checkoutBtn.addEventListener('click', () => {
			if (cart.length === 0) return;
			
			// Render order summary
			const summaryHTML = `
				${cart.map(item => `
					<div class="summary-item">
						<div class="summary-item-info">
							<div class="summary-item-icon">üç™</div>
							<div class="summary-item-details">
								<h4>${item.name}</h4>
								<div class="summary-item-meta">${formatPrice(item.price)} √ó ${item.quantity}</div>
							</div>
						</div>
						<div class="summary-item-price">
							<div class="summary-item-total">${formatPrice(item.price * item.quantity)}</div>
							<div class="summary-item-unit-price">${item.quantity} ${item.quantity === 1 ? 'piece' : 'pieces'}</div>
						</div>
					</div>
				`).join('')}
				<div class="summary-divider"></div>
				<div class="summary-total">
					<span class="summary-total-label">Total Amount</span>
					<span class="summary-total-amount">${formatPrice(calculateTotal())}</span>
				</div>
				<div class="summary-note">
					üì± Click "Send via WhatsApp" to send your order. We'll confirm availability and provide payment details.
				</div>
			`;
			
			orderSummaryContent.innerHTML = summaryHTML;
			orderModal.classList.add('active');
			closeCart();
		});

		closeModalBtn.addEventListener('click', () => {
			orderModal.classList.remove('active');
		});

		backToCartBtn.addEventListener('click', () => {
			orderModal.classList.remove('active');
			openCart();
		});

		sendWhatsAppBtn.addEventListener('click', () => {
			// Generate WhatsApp message
			const orderDetails = cart.map(item => 
				`${item.image} ${item.name} - ${item.quantity} pcs (${formatPrice(item.price * item.quantity)})`
			).join('%0A');
			
			const total = formatPrice(calculateTotal());
			const message = `üç™ *ZenCookies Order*%0A%0A${orderDetails}%0A%0A*Total: ${total}*%0A%0APlease confirm availability and provide payment details. Thank you!`;
			
			const whatsappUrl = `https://wa.me/601131822616?text=${message}`;
			
			// Open payment modal
			orderModal.classList.remove('active');
			paymentModal.classList.add('active');
			paymentAmount.textContent = total;
			
			// Open WhatsApp in new tab
			window.open(whatsappUrl, '_blank');
		});

		closePaymentModalBtn.addEventListener('click', () => {
			paymentModal.classList.remove('active');
			document.body.style.overflow = '';
		});

		sendPaymentProofBtn.addEventListener('click', () => {
			const message = `Hi! I've completed the payment for my ZenCookies order (${formatPrice(calculateTotal())}). Sending payment proof now. üç™`;
			const whatsappUrl = `https://wa.me/601131822616?text=${encodeURIComponent(message)}`;
			window.open(whatsappUrl, '_blank');
		});

		// Close modals on overlay click
		orderModal.addEventListener('click', (e) => {
			if (e.target === orderModal) {
				orderModal.classList.remove('active');
			}
		});

		paymentModal.addEventListener('click', (e) => {
			if (e.target === paymentModal) {
				paymentModal.classList.remove('active');
				document.body.style.overflow = '';
			}
		});

		// Scroll reveal animation
		const observerOptions = {
			threshold: 0.1,
			rootMargin: '0px 0px -50px 0px'
		};

		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.isIntersecting) {
					entry.target.classList.add('visible');
				}
			});
		}, observerOptions);

		document.querySelectorAll('.reveal').forEach(el => observer.observe(el));

		// Smooth scroll for navigation links
		document.querySelectorAll('a[href^="#"]').forEach(anchor => {
			anchor.addEventListener('click', function (e) {
				e.preventDefault();
				const target = document.querySelector(this.getAttribute('href'));
				if (target) {
					const offset = 100;
					const targetPosition = target.offsetTop - offset;
					window.scrollTo({
						top: targetPosition,
						behavior: 'smooth'
					});
				}
			});
		});

		// Initialize
		renderCart();
	</script>
