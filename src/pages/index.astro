				cartCount.classList.add('hidden');
			}
		}

		function calculateTotal() {
			return cart.reduce((sum, item) => sum + (item.price * item.quantity), 0);
		}

		function formatPrice(price) {
			return `RM ${price.toFixed(2)}`;
		}

		function renderCart() {
			if (cart.length === 0) {
				emptyCart.style.display = 'block';
				cartItems.innerHTML = '';
				cartFooter.style.display = 'none';
			} else {
				emptyCart.style.display = 'none';
				cartFooter.style.display = 'block';
				
				cartItems.innerHTML = cart.map(item => `
					<div class="cart-item" data-item-id="${item.id}">
						<div class="cart-item-header">
							<div class="cart-item-info">
								<div class="cart-item-name">${item.name}</div>
								<div class="cart-item-unit">${formatPrice(item.price)} / unit</div>
							</div>
							<div class="cart-item-total">${formatPrice(item.price * item.quantity)}</div>
						</div>
						<div class="cart-item-controls">
							<div class="cart-qty-stepper">
								<button class="cart-qty-btn" onclick="updateCartItemQty(${item.id}, ${item.quantity - 1})" aria-label="Decrease quantity">-</button>
								<span class="cart-qty-value">${item.quantity}</span>
								<button class="cart-qty-btn" onclick="updateCartItemQty(${item.id}, ${item.quantity + 1})" aria-label="Increase quantity">+</button>
							</div>
							<button class="remove-link" onclick="removeFromCart(${item.id})">
								<svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<polyline points="3 6 5 6 21 6"></polyline>
									<path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
								</svg>
								Remove
							</button>
						</div>
					</div>
				`).join('');
				
				totalAmount.textContent = formatPrice(calculateTotal());
			}
			updateCartCount();
		}

		// Update Cart Item Quantity
		window.updateCartItemQty = function(cookieId, newQuantity) {
			if (newQuantity <= 0) {
				// If quantity becomes 0, ask for confirmation or just remove
				if (confirm('Remove this item from cart?')) {
					removeFromCart(cookieId);
				}
				return;
			}

			const item = cart.find(item => item.id === cookieId);
			if (item) {
				item.quantity = newQuantity;
				renderCart();
				
				// Also update the main page input if it exists
				const input = document.getElementById(`qty-${cookieId}`); // Note: categoryId is not available here easily, but we can try to find it or just skip
				// Actually, we need to find the categoryId to update the input. 
				// But since we don't have it, we can iterate or just rely on the fact that when the modal closes, 
				// the user might see the old value. 
				// Let's try to update all inputs that match this cookie ID (if we had that mapping).
				// For now, let's just update the cart.
				
				// Sync with main page inputs
				const inputs = document.querySelectorAll(`.qty-input`);
				inputs.forEach(inp => {
					// We need to check if this input belongs to the cookieId.
					// The input has ID `qty-${categoryId}`.
					// The add button has `data-cookie-id`.
					const categoryId = inp.id.replace('qty-', '');
					const addBtn = document.getElementById(`add-btn-${categoryId}`);
					if (addBtn && parseInt(addBtn.dataset.cookieId) === cookieId) {
						inp.value = newQuantity;
						updateCapsuleText(categoryId);
					}
				});
			}
		};

		// History State Management
		function pushModalState(modalName) {
			// Prevent pushing if already in that state
			if (history.state && history.state.modal === modalName) return;
			history.pushState({ modal: modalName }, '', `#${modalName}`);
		}

		window.addEventListener('popstate', (event) => {
			// Reset all modals
			cartSidebar.classList.remove('open');
			cartOverlay.classList.remove('active');
			orderModal.classList.remove('active');
			paymentModal.classList.remove('active');
			document.body.style.overflow = '';

			// Restore state
			if (event.state && event.state.modal) {
				if (event.state.modal === 'cart') {
					cartSidebar.classList.add('open');
					cartOverlay.classList.add('active');
					document.body.style.overflow = 'hidden';
				} else if (event.state.modal === 'order') {
					orderModal.classList.add('active');
					document.body.style.overflow = 'hidden';
				} else if (event.state.modal === 'payment') {
					paymentModal.classList.add('active');
					document.body.style.overflow = 'hidden';
				}
			}
		});

		function openCart() {
			pushModalState('cart');
			cartSidebar.classList.add('open');
			cartOverlay.classList.add('active');
			document.body.style.overflow = 'hidden';
		}

		function closeCart() {
			// Instead of just hiding, we go back in history
			// This triggers popstate, which hides the UI
			history.back();
		}

		// Helper to just hide UI without history manipulation (for transitions)
		function hideCartUI() {
			cartSidebar.classList.remove('open');
			cartOverlay.classList.remove('active');
		}

		// Cart Functions
		window.removeFromCart = function(cookieId) {
			cart = cart.filter(item => item.id !== cookieId);
			renderCart();
			
			// Reset quantity input
			const qtyInput = document.querySelector(`.qty-input[data-cookie-id="${cookieId}"]`);
			if (qtyInput) qtyInput.value = '0';
		};

		function addToCart(cookieId, quantity) {
			if (quantity <= 0) return;

			const cookie = cookiesData.find(c => c.id === cookieId);
			if (!cookie) return;

			const existingItem = cart.find(item => item.id === cookieId);
			
			if (existingItem) {
				existingItem.quantity = quantity;
			} else {
				cart.push({
					id: cookie.id,
					name: cookie.name,
					price: cookie.price,
					image: cookie.image,
					quantity: quantity
				});
			}

			renderCart();
			// openCart(); // Disabled auto-open for better UX

			// Visual feedback
			showToast(`Added ${cookie.name} to cart`);
			updateCapsuleText(categoryId); // Update text to show "Update" state
		}

		// Quantity Controls
		document.addEventListener('click', (e) => {
			// Handle Minus
			if (e.target.closest('.qty-minus')) {
				const btn = e.target.closest('.qty-minus');
				const categoryId = btn.dataset.category;
				const input = document.getElementById(`qty-${categoryId}`);
				if (input) {
					const currentValue = parseInt(input.value) || 0;
					if (currentValue > 0) {
						input.value = currentValue - 1;
						updateCapsuleText(categoryId);
					}
				}
			}

			// Handle Plus
			if (e.target.closest('.qty-plus')) {
				const btn = e.target.closest('.qty-plus');
				const categoryId = btn.dataset.category;
				const input = document.getElementById(`qty-${categoryId}`);
				if (input) {
					const currentValue = parseInt(input.value) || 0;
					if (currentValue < 99) {
						input.value = currentValue + 1;
						updateCapsuleText(categoryId);
					}
				}
			}

			// Handle Add Button Click
			if (e.target.closest('.capsule-add-btn')) {
				const btn = e.target.closest('.capsule-add-btn');
				const cookieId = parseInt(btn.dataset.cookieId);
				const categoryId = btn.dataset.category;
				const input = document.getElementById(`qty-${categoryId}`);
				let quantity = parseInt(input.value) || 0;
				
				// If quantity is 0, treat as "Add 1"
				if (quantity === 0) {
					quantity = 1;
					input.value = 1;
					updateCapsuleText(categoryId);
				}
				
				addToCart(cookieId, quantity);
				
				// Reset after adding? Optional. Let's keep it for now or reset to 0.
				// For better UX, maybe reset to 0 to show "Add to Cart" again?
				// Or keep it to allow adding more? Let's reset to 0 for "fresh" state.
				// setTimeout(() => {
				// 	input.value = 0;
				// 	updateCapsuleText(categoryId);
				// }, 1000);
			}
		});

		function updateCapsuleText(categoryId) {
			const input = document.getElementById(`qty-${categoryId}`);
			const btnText = document.getElementById(`btn-text-${categoryId}`);
			const addBtn = document.getElementById(`add-btn-${categoryId}`);
			const quantity = parseInt(input.value) || 0;
			const price = parseFloat(addBtn.dataset.cookiePrice) || 0;
			const cookieId = parseInt(addBtn.dataset.cookieId);
			
			// Check if this specific item is already in cart
			const inCart = cart.find(item => item.id === cookieId);

			if (quantity === 0) {
				if (inCart) {
					// If in cart but input is 0 (user decreased to 0), show "Remove?" or just "Add to Cart"
					// But wait, if input is 0, it means they want to add 0? 
					// Or maybe we should show current cart qty if they haven't touched it?
					// Let's keep it simple: Input reflects what they WANT to add/update.
					btnText.textContent = "Add to Cart";
					addBtn.style.color = "var(--color-dark)";
				} else {
					btnText.textContent = "Add to Cart";
					addBtn.style.color = "var(--color-dark)";
				}
			} else {
				const total = (quantity * price).toFixed(2);
				if (inCart) {
					btnText.textContent = `Update to ${quantity} ‚Ä¢ RM ${total}`;
				} else {
					btnText.textContent = `Add ${quantity} ‚Ä¢ RM ${total}`;
				}
				addBtn.style.color = "var(--color-primary-dark)";
			}
		}

		// Cart UI Controls
		cartButton.addEventListener('click', openCart);
		if (floatingCartBtn) floatingCartBtn.addEventListener('click', openCart);
		closeCartBtn.addEventListener('click', closeCart);
		cartOverlay.addEventListener('click', closeCart);

		// Checkout Flow
		checkoutBtn.addEventListener('click', () => {
			if (cart.length === 0) return;
			
			// Render order summary
			const summaryHTML = `
				${cart.map(item => `
					<div class="summary-item">
						<div class="summary-item-info">
							<div class="summary-item-icon">üç™</div>
							<div class="summary-item-details">
								<h4>${item.name}</h4>
								<div class="summary-item-meta">${formatPrice(item.price)} √ó ${item.quantity}</div>
							</div>
						</div>
						<div class="summary-item-price">
							<div class="summary-item-total">${formatPrice(item.price * item.quantity)}</div>
							<div class="summary-item-unit-price">${item.quantity} ${item.quantity === 1 ? 'piece' : 'pieces'}</div>
						</div>
					</div>
				`).join('')}
				<div class="summary-divider"></div>
				<div class="summary-item" id="smallOrderFeeRow" style="display: none; color: var(--color-primary-dark);">
					<div class="summary-item-info">
						<div class="summary-item-icon">üõµ</div>
						<div class="summary-item-details">
							<h4>Small Order Fee</h4>
							<div class="summary-item-meta">Orders below RM 50.00</div>
						</div>
					</div>
					<div class="summary-item-price">
						<div class="summary-item-total">RM 10.00</div>
					</div>
				</div>
				<div class="summary-total">
					<span class="summary-total-label">Total Amount</span>
					<span class="summary-total-amount">${formatPrice(calculateTotal())}</span>
				</div>
				<div class="summary-note">
					üì± Click "Send via WhatsApp" to send your order. We'll confirm availability and provide payment details.
				</div>
			`;
			
			orderSummaryContent.innerHTML = summaryHTML;
			pushModalState('order');
			orderModal.classList.add('active');
			hideCartUI();
			
			// Initial check for fee
			setTimeout(updateOrderSummaryTotal, 0);
		});

		closeModalBtn.addEventListener('click', () => {
			history.back();
		});

		backToCartBtn.addEventListener('click', () => {
			history.back();
		});

		// Delivery Method Logic
		window.handleDeliveryMethodChange = function() {
			const deliveryMethod = document.querySelector('input[name="deliveryMethod"]:checked').value;
			const addressInput = document.getElementById('customerAddress');
			const addressLabel = document.querySelector('label[for="customerAddress"]');
			const freeZoneContainer = document.getElementById('freeDeliveryZoneContainer');
			const isFreeZoneCheckbox = document.getElementById('isFreeZone');
			
			// Update Address Field
			if (deliveryMethod === 'pickup') {
				addressInput.required = false;
				addressInput.placeholder = "Not required for self pickup";
				addressInput.disabled = true;
				addressInput.value = "Self Pickup";
				addressLabel.innerHTML = 'Address (Optional)';
				
				// Hide free zone option
				if (freeZoneContainer) freeZoneContainer.style.display = 'none';
				if (isFreeZoneCheckbox) isFreeZoneCheckbox.checked = false;
			} else {
				addressInput.required = true;
				addressInput.placeholder = "Enter your full delivery address including postcode and city";
				addressInput.disabled = false;
				if (addressInput.value === "Self Pickup") addressInput.value = "";
				addressLabel.innerHTML = 'Delivery Address <span style="color: red">*</span>';
				
				// Show free zone option
				if (freeZoneContainer) freeZoneContainer.style.display = 'block';
			}

			// Update Total with Small Order Fee
			updateOrderSummaryTotal();
		};

		function updateOrderSummaryTotal() {
			const deliveryMethod = document.querySelector('input[name="deliveryMethod"]:checked')?.value || 'delivery';
			const isFreeZone = document.getElementById('isFreeZone')?.checked || false;
			const subtotal = calculateTotal();
			let total = subtotal;
			let fee = 0;
			const SMALL_ORDER_THRESHOLD = 50;
			const SMALL_ORDER_FEE = 10;

			const feeRow = document.getElementById('smallOrderFeeRow');
			const totalEl = document.querySelector('.summary-total-amount');

			// Apply fee if:
			// 1. Delivery is selected
			// 2. Subtotal is below threshold
			// 3. User is NOT in the free zone
			if (deliveryMethod === 'delivery' && subtotal < SMALL_ORDER_THRESHOLD && !isFreeZone) {
				fee = SMALL_ORDER_FEE;
				total += fee;
				if (feeRow) {
					feeRow.style.display = 'flex';
					feeRow.querySelector('.summary-item-total').textContent = 'RM 10.00';
					feeRow.querySelector('.summary-item-details h4').textContent = 'Small Order Fee';
				}
			} else {
				if (feeRow) feeRow.style.display = 'none';
			}

			if (totalEl) totalEl.textContent = formatPrice(total);
		}
		// Expose for HTML attribute calls
		window.updateOrderSummaryTotal = updateOrderSummaryTotal;

		sendWhatsAppBtn.addEventListener('click', async () => {
			const btn = sendWhatsAppBtn;
			
			// 1. Validation
			const form = document.getElementById('customerForm');
			const nameInput = document.getElementById('customerName');
			const phoneInput = document.getElementById('customerPhone');
			const addressInput = document.getElementById('customerAddress');
			const honeypotInput = document.getElementById('website_url');
			const deliveryMethod = document.querySelector('input[name="deliveryMethod"]:checked').value;
			const isFreeZone = document.getElementById('isFreeZone')?.checked || false;
			
			// Calculate Final Total
			const subtotal = calculateTotal();
			let total = subtotal;
			let fee = 0;
			const SMALL_ORDER_THRESHOLD = 50;
			const SMALL_ORDER_FEE = 10;

			if (deliveryMethod === 'delivery' && subtotal < SMALL_ORDER_THRESHOLD && !isFreeZone) {
				fee = SMALL_ORDER_FEE;
				total += fee;
			}
			
			// Honeypot check
			if (honeypotInput.value) {
				console.log('Spam detected');
				return;
			}

			// Native browser validation
			if (!form.checkValidity()) {
				form.reportValidity();
				// Visual feedback
				form.classList.add('shake');
				setTimeout(() => form.classList.remove('shake'), 500);
				return;
			}

			const name = nameInput.value.trim();
			const phone = phoneInput.value.trim();
			let address = addressInput.value.trim();

			if (isFreeZone) {
				address += " [Free Zone: Gelang Patah / Iskandar Puteri]";
			}

			if (!name || !phone || (!address && deliveryMethod === 'delivery')) {
				// Fallback if browser validation passes but values are empty (e.g. spaces)
				alert('Please enter your name, phone number, and delivery address.');
				return;
			}

			// Prevent double clicks
			if (btn.disabled) return;
			btn.disabled = true;
			const originalBtnText = btn.innerHTML;
			btn.innerHTML = '<span>Processing...</span>';

			// 2. Send order to Akaunting (Backend)
			// Use fetch with keepalive: true instead of sendBeacon for better JSON support
			try {
				const payload = {
					items: cart,
					customer: { name, phone, address, deliveryMethod },
					fee: fee,
					total: total
				};
				
				// Non-blocking fetch, but we want to know if it fails for debugging
				fetch('/api/create-order', {
					method: 'POST',
					headers: { 'Content-Type': 'application/json' },
					body: JSON.stringify(payload),
					keepalive: true
				}).then(async res => {
					if (!res.ok) {
						const errText = await res.text();
						console.error('Order creation failed:', res.status, errText);
						// alert(`Debug: Order failed to save to Akaunting. Error ${res.status}: ${errText}`);
					} else {
						console.log('Order saved to Akaunting successfully');
					}
				}).catch(err => {
					console.error('Failed to create Akaunting invoice:', err);
					// alert('Debug: Network error saving order to Akaunting: ' + err.message);
				});
			} catch (e) {
				console.error(e);
			}

			// 3. Generate WhatsApp message
			const orderDetails = cart.map(item => 
				`${item.name} - ${item.quantity} pcs (${formatPrice(item.price * item.quantity)})`
			).join('%0A');
			
			const formattedTotal = formatPrice(total);
			const encodedAddress = encodeURIComponent(address);
			const methodText = deliveryMethod === 'pickup' ? 'Self Pickup' : 'Delivery';
			
			let feeText = '';
			if (fee > 0) {
				feeText = `%0A*Small Order Fee:* ${formatPrice(fee)}`;
			}
			
			const message = `üç™ *ZenCookies Order*%0A%0A*Method:* ${methodText}%0A*Customer:* ${encodeURIComponent(name)}%0A*Phone:* ${encodeURIComponent(phone)}%0A*Address:* ${encodedAddress}%0A%0A*Order Details:*%0A${orderDetails}${feeText}%0A%0A*Total: ${formattedTotal}*%0A%0APlease confirm availability and provide payment details. Thank you!`;
			
			const whatsappUrl = `https://wa.me/601131822616?text=${message}`;
			
			// Generate transaction ID for conversion tracking
			const transactionId = Date.now().toString();

			// Redirect to Thank You page
			window.location.href = `/thank-you?transaction_id=${transactionId}`;
			
			// Open WhatsApp in new tab
			window.open(whatsappUrl, '_blank');
		});

		closePaymentModalBtn.addEventListener('click', () => {
			history.back();
		});

		sendPaymentProofBtn.addEventListener('click', () => {
			const message = `Hi! I've completed the payment for my ZenCookies order (${formatPrice(calculateTotal())}). Sending payment proof now. üç™`;
			const whatsappUrl = `https://wa.me/601131822616?text=${encodeURIComponent(message)}`;
			window.open(whatsappUrl, '_blank');
		});

		// Close modals on overlay click
		orderModal.addEventListener('click', (e) => {
			if (e.target === orderModal) {
				history.back();
			}
		});

		paymentModal.addEventListener('click', (e) => {
			if (e.target === paymentModal) {
				history.back();
			}
		});

		// Scroll reveal animation
		const observerOptions = {
			threshold: 0.1,
			rootMargin: '0px 0px -50px 0px'
		};

		const observer = new IntersectionObserver((entries) => {
			entries.forEach(entry => {
				if (entry.isIntersecting) {
					entry.target.classList.add('visible');
				}
			});
		}, observerOptions);

		document.querySelectorAll('.reveal').forEach(el => observer.observe(el));

		// Smooth scroll for navigation links
		document.querySelectorAll('a[href^="#"]').forEach(anchor => {
			anchor.addEventListener('click', function (e) {
				e.preventDefault();
				const target = document.querySelector(this.getAttribute('href'));
				if (target) {
					const offset = 100;
					const targetPosition = target.offsetTop - offset;
					window.scrollTo({
						top: targetPosition,
						behavior: 'smooth'
					});
				}
			});
		});

		// Initialize
		renderCart();
	</script>
