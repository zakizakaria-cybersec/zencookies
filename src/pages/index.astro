		/* Cart Overlay */
		.cart-overlay {
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 100%;
			background: rgba(255, 255, 255, 0.2);
			backdrop-filter: blur(4px);
			z-index: 1000;
			opacity: 0;
			visibility: hidden;
			transition: all 0.3s ease;
