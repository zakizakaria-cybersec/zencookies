		/* Cart Icon in Nav */
		.cart-icon-btn {
			position: relative;
			padding: 0.5rem;
			background: none;
			color: var(--color-dark);
			border-radius: 50%;
			transition: all 0.3s ease;
			display: flex;
			align-items: center;
			justify-content: center;
		}

		.cart-icon-btn:hover {
			background: rgba(139, 115, 85, 0.1);
			color: var(--color-primary);
		}

		.cart-count {
			position: absolute;
			top: -4px;
			right: -4px;
			background: linear-gradient(135deg, var(--color-secondary), #D4A574);
			color: var(--color-white);
			font-size: 0.7rem;
			font-weight: 700;
			min-width: 20px;
			height: 20px;
			border-radius: 10px;
			display: flex;
			align-items: center;
			justify-content: center;
			padding: 0 5px;
			box-shadow: 0 2px 8px rgba(212, 165, 116, 0.4);
			animation: bounce 0.5s ease;
		}

		.cart-count.hidden {
			display: none;
		}

		/* Quantity Selector */
		.quantity-selector {
			display: flex;
			align-items: center;
			justify-content: center;
			gap: 0.75rem;
			margin-bottom: 1rem;
			opacity: 0;
			transform: translateY(10px);
			transition: all 0.3s ease;
		}

		.cookie-card:hover .quantity-selector {
			opacity: 1;
			transform: translateY(0);
		}

		.qty-btn {
			width: 32px;
			height: 32px;
			border-radius: 50%;
			background: var(--color-light);
			color: var(--color-primary);
			display: flex;
			align-items: center;
			justify-content: center;
			transition: all 0.3s ease;
			border: none;
		}

		.qty-btn:hover {
			background: var(--color-primary);
			color: var(--color-dark);
			transform: scale(1.1);
		}

		.qty-input {
			width: 50px;
			height: 36px;
			text-align: center;
			border: 1px solid rgba(0,0,0,0.1);
			border-radius: 8px;
			font-size: 1rem;
			font-weight: 600;
			color: var(--color-dark);
			background: var(--color-white);
			transition: all 0.3s ease;
		}

		.qty-input:focus {
			outline: none;
			border-color: var(--color-primary);
			box-shadow: 0 0 0 3px rgba(255, 20, 147, 0.1);
